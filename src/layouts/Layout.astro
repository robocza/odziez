---
import Story from "@components/Story.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<style>
			@font-face {
				font-family: 'GT America';
				src: url('/fonts/GT-America-Standard-Regular.woff2') format('woff2');
				font-weight: normal;
				font-style: normal;
				font-display: swap;
			}
		</style>
		<link rel="stylesheet" href="https://use.typekit.net/xwk1wkl.css"/>
	</head>
	<body>
		<div class="grid grid-cols-2">
			<div class="h-screen overflow-hidden bg-black text-white">
				<div class="h-full overflow-y-auto">
					<div class="relative h-96 max-h-screen">
						<img class="transition-transform hover:translate-y-6 absolute top-0 left-0 h-1/2" src="/assets/ball1.png" alt="Drop Siła Robocza Kula"/>
						<img class="transition-transform hover:scale-125 absolute top-0 right-0 mt-12 mr-16 h-1/2" src="/assets/ball2.png" alt="Drop Siła Robocza Kula"/>
						<img class="transition-transform hover:rotate-180 absolute bottom-0 right-0 h-1/2" src="/assets/ball1.png" alt="Drop Siła Robocza Kula"/>
						<img class="transition-transform animate-pulse absolute bottom-0 left-0 h-1/2 ml-10 mb-5" src="/assets/ball2.png" alt="Drop Siła Robocza Kula"/>
					</div>
					<div class="px-10 pt-10">
						<div class="mx-auto max-w-2xl">
							<Story/>
						</div>
					</div>
				</div>
			</div>
			<div class="flex flex-col h-screen overflow-y-auto">
				<slot />
			</div>
		</div>
	</body>
</html>
