---
import Cart from '@components/cart/Cart.vue';
import ProductSectionDivider from '@components/product/ProductSectionDivider.astro';
import CloseIcon from '@components/CloseIcon.astro';
---

<div
    id="cart-drawer"
    class="fixed right-0 top-0 z-40 h-screen w-80 translate-x-full overflow-y-auto bg-white transition-transform"
    tabindex="-1"
    aria-labelledby="cart-drawer-label"
>
    <h5 id="cart-drawer-label" class="mb-4 mt-8 px-4 text-left font-pixel text-5xl lowercase">Koszyk</h5>
    <ProductSectionDivider />
    <button type="button" data-cart-drawer-hide aria-controls="cart-drawer" class="absolute right-2.5 top-2.5 hover:opacity-50">
        <CloseIcon />
        <span class="sr-only">Zamknij koszyk</span>
    </button>
    <Cart client:only="vue" />
</div>
