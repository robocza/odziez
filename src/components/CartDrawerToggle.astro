---
import CartDrawer from "./CartDrawer.astro";
---

<button type="button"
        class="relative inline-flex items-center p-2.5 text-sm font-medium text-center text-white bg-black rounded-full hover:bg-gray-600 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
        data-drawer-target="cart-drawer" data-cart-drawer-show data-drawer-placement="right"
        aria-controls="cart-drawer">
    <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
        <path d="M3 1a1 1 0 000 2h1.22l.305 1.222a.997.997 0 00.01.042l1.358 5.43-.893.892C3.74 11.846 4.632 14 6.414 14H15a1 1 0 000-2H6.414l1-1H14a1 1 0 00.894-.553l3-6A1 1 0 0017 3H6.28l-.31-1.243A1 1 0 005 1H3zM16 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM6.5 18a1.5 1.5 0 100-3 1.5 1.5 0 000 3z"></path>
    </svg>
    <span class="sr-only">Koszyk</span>
</button>
<CartDrawer/>

<script>
    import { initCartDrawer } from '../cartDrawer';

    const cartDrawerElement = document.getElementById('cart-drawer');

    const cartDrawer = initCartDrawer(cartDrawerElement);

    const cartDrawerHideButtons = document.querySelectorAll("button[data-cart-drawer-hide]");
    cartDrawerHideButtons.forEach((cartDrawerHideButton) => {
        cartDrawerHideButton.addEventListener('click', () => {
            cartDrawer.hide();
        });
    });

    const cartDrawerShowButtons = document.querySelectorAll("button[data-cart-drawer-show]");
    cartDrawerShowButtons.forEach((button) => {
        button.addEventListener('click', () => {
            cartDrawer.show();
        });
    });
</script>
