---
import HeaderTitle from "@components/HeaderTitle.astro";
import HeaderSubTitle from "@components/HeaderSubTitle.astro";
---
<div class="relative w-full h-12 sm:h-14 lg:h-20 xl:h-24 overflow-hidden" data-carousel="slide">
    <div class="hidden duration-700 ease-in-out text-center" data-carousel-item>
        <div class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2">
            <HeaderTitle/>
        </div>
    </div>
    <div class="hidden duration-700 ease-in-out text-center" data-carousel-item>
        <div class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2">
            <HeaderSubTitle/>
        </div>
    </div>
</div>
