---
import type {CollectionEntry} from 'astro:content';

interface Props {
    product: CollectionEntry<'product'>;
}

const {product} = Astro.props;
---

<div class="text-center">
    <img src={product.data.image} alt={product.data.name} class="max-h-48 mx-auto py-2"/>
    <h2 class="my-2 uppercase text-lg">{product.data.name}</h2>
    <a class="inline-block bg-black text-white py-2 px-4 rounded-full uppercase hover:opacity-50"
       href={`/product/${product.slug}`}>
        Zobacz szczegóły
    </a>
</div>
