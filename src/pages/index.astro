---
import ListProducts from '@components/ListProducts.astro';
import Timer from '@components/Timer.astro';
import Layout from '@layouts/Layout.astro';
import CartDrawer from '@components/cart/CartDrawer.astro';
import Story from '@components/Story.astro';
import ArticleTitle from '@components/ArticleTitle.astro';
import Header from '@components/Header.astro';
import Stones from '@components/story/Stones.astro';
import Footer from '@components/Footer.astro';
import LinkButtonReverse from '@components/LinkButtonReverse.astro';
---

<Layout title="OdzieÅ¼ Robocza">
    <div class="grid lg:grid-cols-2">
        <div class="order-2 bg-black text-white lg:order-1 lg:h-screen lg:overflow-hidden">
            <div class="lg:h-full lg:overflow-y-auto">
                <Stones />
                <div class="px-10 pt-10">
                    <div class="mx-auto max-w-2xl text-center lg:text-left">
                        <ArticleTitle />
                        <div class="mx-auto my-10 text-center lg:hidden">
                            <LinkButtonReverse url="/opowiesc" text="Przeczytaj tekst" />
                        </div>
                        <div class="hidden lg:block">
                            <Story />
                            <hr class="mt-16 h-px border-white bg-white" />
                            <Footer />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="z-20 order-1 lg:order-none lg:hidden">
            <Header showBackButton={false} />
        </div>
        <div class="order-3 flex flex-col scroll-smooth lg:order-2 lg:h-screen lg:overflow-y-auto">
            <div class="hidden lg:block">
                <Header showBackButton={false} />
            </div>
            <div id="odziez" class="grid-cols grid grow gap-px border-t border-black bg-black sm:grid-cols-2">
                <ListProducts />
                <div class="order-first grid items-center bg-neutral-400 sm:order-none sm:bg-white">
                    <Timer />
                </div>
            </div>
        </div>
        <div class="order-4 lg:hidden">
            <div class="bg-black px-8 py-4">
                <Footer />
            </div>
        </div>
    </div>
    <CartDrawer />
</Layout>
