---
import Layout from '@layouts/Layout.astro';
import ListItemProduct from '@components/ListItemProduct.astro';
---

<Layout>
	<main class="grid grid-cols-2 h-screen">
		<div class="bg-black text-white flex">
			<div class="grid content-center grow">
				<div class="text-4xl text-center">Tu będzie jakieś zajebiste coś</div>
			</div>
		</div>
		<div class="flex flex-col">
			<div class="bg-white">
				<h1 class="text-9xl uppercase text-justify">Pre-Order</h1>
			</div>
			<div class="grid grid-cols-2 bg-black gap-px grow border-t border-black">
				<div class="bg-white">
					<ListItemProduct title="produkt 1"/>
				</div>
				<div class="bg-white">
					<ListItemProduct title="produkt 2"/>
				</div>
				<div class="bg-white">
					<ListItemProduct title="produkt 3"/>
				</div>
				<div class="bg-white">
					<div class="text-center">Timer</div>
				</div>
			</div>
		</div>
	</main>
</Layout>
